extends layout 

block content 
    h1=title 
    if messages && messages.length > 0
        ul 
            for message in messages 
                li=message

    form(method="POST")
        label(for="name") Username:
        input(type="text" id="name" placeholder="username" name="username" value=(formData === udefined ? '' : formData.username))
        br
        label(for="password") Password:  
        input(type="password" name="password" id="password" value=(formData === udefined ? '' : formData.password))
        br
        button Log In
        p Don't have an account yet. Click 
            a(href="/signup") here.